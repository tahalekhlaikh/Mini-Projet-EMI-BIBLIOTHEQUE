@model gestionDeBiblio.Models.Adherent
@{
    ViewBag.Title = "Détails Adherent";
    var liste = ViewBag.livresemprunte;
}

<h2>Détails</h2>

<div>
    <h4>Adherent</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.prenom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prenom)
        </dd>

    </dl>
    <hr />
    <h4>Liste des Livres prêtés</h4>
    
    
    <table class="table">
        <tr>
            <th>
                Titre
            </th>
            <th>
                Auteur
            </th>
            
        </tr>
  
    @foreach(var item in liste)
    {
    <tr>
        <td>
            @item.titre
        </td>
        <td>
            @item.auteur
        </td>
    </tr>
    }       
</table>
    
</div>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Retour à la liste", "Index")
</p>
